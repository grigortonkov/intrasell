<?xml version="1.0" encoding="utf-8" ?>
<!-- the embedded SQL Commands are executed and parsed as XML Tags-->
<Document>

  <Material>
    <SQLCommand>
      <!--
        Beispiele für Connection String: 
        "Driver={SQL Server};Server=(local);Trusted_Connection=Yes;Database=AdventureWorks;"
        "Driver={Microsoft ODBC for Oracle};Server=ORACLE8i7;Persist Security Info=False;Trusted_Connection=Yes"
        "Driver={Microsoft Access Driver (*.mdb)};DBQ=c:\bin\Northwind.mdb"
        "Driver={Microsoft Excel Driver (*.xls)};DBQ=c:\bin\book1.xls"
        "Driver={Microsoft Text Driver (*.txt; *.csv)};DBQ=c:\bin"
        "DSN=dsnname"
        -->
      <ConnectionString>
        Driver={Microsoft ODBC for Oracle}; Server=NPT.WORLD; UID=:USERNAME; PWD=:PASSWORD;
      </ConnectionString>
      <CommandText>
        <![CDATA[select Code as "Code", 
          txt_abbreviation as "Bezeichnung", 
          txt_description as "Beschreibung" 
        From v_Material 
        Where Code Like ':CODE' 
          and rownum < 100 ]]>
      </CommandText>
      <RowTagName>Detail</RowTagName>
    </SQLCommand>

    <ReportParameters>
      <ReportParameter>
        <Name>CODE</Name>
        <Type>String</Type>
        <Default>%</Default>
      </ReportParameter>

      <ReportParameter>
        <Name>USERNAME</Name>
        <Type>String</Type>
        <Default>NPT_REPORT</Default>
      </ReportParameter>
      <ReportParameter>
        <Name>PASSWORD</Name>
          <Type>String</Type>
          <Default>NPT_REPORT</Default>
        </ReportParameter>
      </ReportParameters>
 

  </Material>

</Document>
